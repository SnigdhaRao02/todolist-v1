<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Shantell+Sans:ital,wght@1,600&display=swap" rel="stylesheet">

<link rel="icon" href="favicon.ico">
  </head>
  <body>

    <div class="full">
      <h1 class="top-heading">What's your agenda for <span style="color:white"><%=ListTitle%></span> ?</h1>

    <form class="" action="/date" method="post">
      <div class="container text-center">
        <div class="row">
          <div class="col">
            <div class="box" id="heading">
              <h1 id="dateAndDay"></h1>
            </div>
          </div>
        </div>
      </div>
    </form>



    <div class="box">
        <% for(var i=0; i<newListItems.length; i++){ %>
          <form action="/delete" method="post">
            <div class="item">
              <input type="checkbox" value="<%=newListItems[i]._id%>" name="check_value" onchange="this.form.submit()">
              <p><%=newListItems[i].name%></p>
            </div>
            <!-- to pass list name for deletion from custom lists -->
            <input type="hidden" name="listName" value="<%=ListTitle%>"></input>
          </form>

        <% } %>


        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Task" autocomplete="off">
            <button class="add" type="submit" name="list" value="<%=ListTitle%>">+</button>
        </form>
    </div>
    <!-- <p>copyright 2023 Snigdha</p> -->
  </div>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

  <script type="text/javascript">
  var options = {
  weekday : "long",
  month: "long",
  day : "numeric"
  };
  let day = document.querySelector('#dateAndDay');
  var today = new Date();
  var xyz=today.toLocaleDateString("en-US", options);
    day.innerHTML = xyz
    // console.log(day.innerHTML);
  

  </script>
  </body>
</html>
